{
  "navigationFallback": { "rewrite": "/index.html", "exclude": ["/assets/*", "/*.css", "/*.js", "/*.png", "/*.jpg", "/*.svg"] },

  "routes": [
    {
      "route": "/api/*",
      "rewrite": "https://binhdansobe.azurewebsites.net/api/*",
      "allowedRoles": ["anonymous"]
    }
  ],

  "responseOverrides": {
    "404": { "rewrite": "/index.html" }   // SPA: route lạ trả index.html
  },

  "globalHeaders": {
    "Cache-Control": "public, max-age=31536000, immutable"
  },

  "mimeTypes": {
    ".json": "text/json"
  }
}
